<!doctype html>
<meta charset="utf-8">
<title webc:if="title" @raw="`${title} | Deluge Community Manual`"></title>
<title webc:else>Deluge Community Manual</title>
<link rel="stylesheet" :href="getBundleFileUrl('css')" webc:keep>
<!-- todo move sidebar to its own component -->
<div class="main-wrapper">
	<aside class="sidebar">
		<nav class="sidebar-content">
			<script webc:type="js">
				navigation.html(navigation.create($data.collections.all), page.url, navigation.html)
			</script>
		</nav>
	</aside>
	<main @raw="content">
	</main>
</div>

<style webc:keep>
	:root {
		--black: #000;
		--white: #fff;
		--blue: #33ccff;
		--pink: #ff2a78;
		--orange: #ffbc34;
		--grey: #cccccc;
		--sans-serif: "Jost*", sans-serif;
		--monospace: IBM Plex Mono, monospace;

		--font-family: var(--sans-serif);
		--fill: var(--black);
		--line: var(--white);
	}

	* {
		box-sizing: border-box;
	}

	html {
		background: var(--fill);
		color: var(--line);
		font-family: var(--sans-serif);
		font-size: 1.2em;
	}

	body {
		margin: 0;
	}

	.main-wrapper {
		display: flex;
		gap: 1em;
	}

	.sidebar {
		width: 12em;
		font-size: .9rem;
		padding: 0 1em;
	}

	.sidebar summary {
		font-weight: bold;
		cursor: pointer;
	}

	.sidebar summary::marker {
		display: none;
	}

	.sidebar a,
	.sidebar li > span {
		text-decoration: none;
		color: var(--white);
		display: block;
		height: 100%;
		width: 100%;
		padding: .2em .5em;
		border-radius: 4px;
	}

	.sidebar ol {
		list-style: none;
		padding: 0;
	}

	.sidebar [aria-current="page"] {
		background: var(--pink);
		font-weight: bold;
	}

	.sidebar ol ol {
		padding-left: 1em;
	}

	.sidebar-content > ol > li > ol {
		padding-left: 0;
	}

	main {
		width: 80ex;
	}

	main a {
		color: var(--blue);
	}
</style>
